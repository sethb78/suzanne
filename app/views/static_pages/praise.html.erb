<%= provide(:title, "Praise") %>
<h2 class="text-center">PRAISE</h2>

<div class="row">
  <div class="col-md-12 col-xs-12">
    <% @praises.each do |praise| %>
      <blockquote>
        <div class="text-justify">
          <%= "\"#{praise.content}\"" %>
        </div>
        <div class="text-right indent-right">
          <strong><%= "-#{praise.name}" %> </strong>
          <br />
          <strong><%= praise.position %></strong>
        </div>
      </blockquote>
      <% end %>
  </div>
</div>
